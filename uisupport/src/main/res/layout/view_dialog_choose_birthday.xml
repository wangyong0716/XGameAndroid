<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_choose_dialog"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_sure_pop_window"
        android:divider="@drawable/horizontal_line"
        android:showDividers="middle"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="@string/personal_choose_birthday"
            style="@style/SurePopWindowTextStyle"/>

        <com.xgame.uisupport.wheelview.CustomDatePickView
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/complete_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:gravity="center"
            android:visibility="visible"
            android:text="完成"
            style="@style/SurePopWindowTextStyle"/>

    </LinearLayout>

</RelativeLayout>