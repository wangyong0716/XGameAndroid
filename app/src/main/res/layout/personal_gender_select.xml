<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:text="@string/gender_select"
        android:layout_marginTop="@dimen/dp_33_3"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:id="@+id/select_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_36_6"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/male_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/male_img"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/icon_unselected"
                />
            <TextView
                style="@style/personal_item_name"
                android:text="@string/male_text"
                android:layout_marginStart="@dimen/dp_7"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/female_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_46_67"
            >
            <ImageView
                android:id="@+id/female_img"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/icon_unselected"
                />
            <TextView
                style="@style/personal_item_name"
                android:text="@string/female_text"
                android:layout_marginStart="@dimen/dp_7"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="@dimen/dialog_btn_width"
        android:layout_height="@dimen/dp_40"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@drawable/positive_btn_bg"
        android:layout_marginTop="@dimen/dp_36_6"
        android:layout_marginBottom="@dimen/dp_19"
        android:layout_gravity="center_horizontal"
        android:text="@android:string/ok"
        />

</LinearLayout>