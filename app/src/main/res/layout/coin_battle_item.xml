<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="149.67dip"
    android:background="@drawable/round_transparent_rectangle_background">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/coin_battle_ring"
        android:drawablePadding="6.33dip"
        android:layout_marginTop="15.67dip"
        android:layout_marginStart="16.33dip"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/item_requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dip"
        android:layout_marginEnd="20.67dip"
        android:textSize="12sp"
        android:textColor="@color/color_white"/>

    <TextView
        android:id="@+id/item_award"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35.33dip"
        android:textSize="12sp"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26.33dip"/>

    <ImageView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53.33dip"
        android:layout_above="@id/item_award"
        android:src="@drawable/coin_battle_coins"
        android:layout_marginBottom="2dip"/>

    <TextView
        android:id="@+id/join_now"
        android:layout_width="120dip"
        android:layout_height="41.67dip"
        android:layout_marginBottom="39dip"
        android:layout_marginEnd="27dip"
        android:text="@string/join_now"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/round_purple_btn_background"/>
</merge>