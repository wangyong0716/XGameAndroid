<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dip"
        android:paddingEnd="16dip"
        android:layout_marginTop="16dip"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choose_item"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/coin_detail_choose_item"
            android:textColor="@color/color_white"
            android:textSize="@dimen/coin_win_title_size"/>

        <TextView
            android:id="@+id/read_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_detail_read_rule"
            android:textColor="@color/color_white"
            android:textSize="12sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13.33dip"
            android:layout_marginEnd="13.33dip"
            android:layout_marginTop="12dip"
            android:orientation="vertical">

            <com.xgame.ui.view.CoinBattleItemView
                android:id="@+id/battle_item1"
                android:layout_width="match_parent"
                android:layout_height="149.67dip"
                android:visibility="gone"/>

            <com.xgame.ui.view.CoinBattleItemView
                android:id="@+id/battle_item2"
                android:layout_width="match_parent"
                android:layout_height="149.67dip"
                android:layout_marginTop="12.67dip"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>