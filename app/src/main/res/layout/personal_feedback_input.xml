<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_40"
    >
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_gravity="bottom"
        >

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/confirm"
            android:gravity="start"
            >
            <TextView
                android:id="@+id/feedback_title"
                style="@style/personal_input_title"
                android:text="@string/feedback_title"
                />
            <EditText
                android:id="@+id/feedback_edit"
                style="@style/personal_input_edit"
                />
            <TextView
                android:id="@+id/contact_title"
                style="@style/personal_input_title"
                android:text="@string/contact_title"
                android:layout_marginTop="@dimen/dp_8"
                />
            <EditText
                android:id="@+id/contact_edit"
                style="@style/personal_input_edit"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/confirm"
            style="@style/personal_input_title"
            android:text="@android:string/ok"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/middle"
            />

    </RelativeLayout>
</FrameLayout>
